<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/state1">
        <shape android:shape="rectangle">
            <solid android:color="#1A202A" />
            <stroke android:width="3dp" android:color="#00FFF7" />
            <corners android:radius="28dp" />
            <padding android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp" />
        </shape>
    </item>

    <item android:id="@+id/state2">
        <shape android:shape="rectangle">
            <solid android:color="#1A202A" />
            <stroke android:width="3dp" android:color="#33FFF7" />
            <corners android:radius="28dp" />
            <padding android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp" />
        </shape>
    </item>

</animated-selector>
