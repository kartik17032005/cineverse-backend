<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Repeating horizontal scan lines -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#00FFFFFF"
                android:centerColor="#4000FFFF"
                android:endColor="#00FFFFFF" />
            <size android:width="100dp" android:height="2dp" />
        </shape>
    </item>
    <!-- Secondary scan line with different opacity -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#00FFFFFF"
                android:centerColor="#2000FFFF"
                android:endColor="#00FFFFFF" />
            <size android:width="100dp" android:height="1dp" />
        </shape>
    </item>
    <!-- Tertiary scan line -->
    <item android:top="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#1000FFFF" />
            <size android:width="100dp" android:height="1dp" />
        </shape>
    </item>
</layer-list>
