<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="35dp"
                android:startColor="#80FF0080"
                android:centerColor="#40FF0080"
                android:endColor="#00FF0080" />
        </shape>
    </item>
    <!-- Glass circle -->
    <item android:insetLeft="5dp" android:insetTop="5dp" android:insetRight="5dp" android:insetBottom="5dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="25dp"
                android:startColor="#60FFFFFF"
                android:centerColor="#40FFFFFF"
                android:endColor="#20FFFFFF" />
            <stroke android:width="2dp" android:color="#FFFF0080" />
        </shape>
    </item>
    <!-- Inner highlight -->
    <item android:insetLeft="15dp" android:insetTop="15dp" android:insetRight="15dp" android:insetBottom="15dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="15dp"
                android:startColor="#40FF0080"
                android:endColor="#00FF0080" />
        </shape>
    </item>
</layer-list>
