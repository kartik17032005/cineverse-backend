<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Scan line effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#0000FFFF"
                android:centerColor="#4000FFFF"
                android:endColor="#0000FFFF" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    <!-- Diagonal interference -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#0000FFFF"
                android:centerColor="#2000FFFF"
                android:endColor="#0000FFFF" />
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>
