<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer ring -->
    <item>
        <shape android:shape="oval">
            <stroke android:width="4dp" android:color="#6000FFFF" />
            <size android:width="100dp" android:height="100dp" />
        </shape>
    </item>
    <!-- Middle ring -->
    <item android:top="15dp" android:bottom="15dp" android:left="15dp" android:right="15dp">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#8000FFFF" />
        </shape>
    </item>
    <!-- Inner ring -->
    <item android:top="25dp" android:bottom="25dp" android:left="25dp" android:right="25dp">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#FF00FFFF" />
        </shape>
    </item>
</layer-list>
