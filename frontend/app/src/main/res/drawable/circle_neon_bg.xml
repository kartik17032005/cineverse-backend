<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#1A00FFF7" />
            <size android:width="48dp" android:height="48dp"/>
            <corners android:radius="24dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <!-- Inner core -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#00FFF7"
                android:endColor="#001C1C"
                android:angle="45" />
            <stroke
                android:width="2dp"
                android:color="#00FFF7" />
        </shape>
    </item>

</layer-list>
