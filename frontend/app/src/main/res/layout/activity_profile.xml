<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111118">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:padding="12dp"
        android:background="@drawable/glass_bg"
        android:src="@drawable/ic_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImageLarge"
        android:layout_width="203dp"
        android:layout_height="208dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/profile_circle_accent"
        android:elevation="10dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Profile Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="#20223a"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/profileImageLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Name -->
            <TextView
                android:id="@+id/fullNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="#FFA600"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="6dp"/>

            <!-- Email -->
            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#41BAED"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <!-- Edit Profile -->
            <Button
                android:id="@+id/editProfileBtn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Edit Profile"
                android:backgroundTint="#408AFF"
                android:textColor="#FFF"
                android:textAllCaps="false"
                android:elevation="6dp"
                android:layout_marginBottom="12dp"/>

            <!-- Change Password -->
            <Button
                android:id="@+id/changePasswordBtn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Change Password"
                android:backgroundTint="#FFA600"
                android:textColor="#FFF"
                android:textAllCaps="false"
                android:elevation="6dp"
                android:layout_marginBottom="12dp"/>

            <!-- Logout -->
            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Logout"
                android:backgroundTint="#DF357D"
                android:textColor="#FFF"
                android:textAllCaps="false"
                android:elevation="6dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
