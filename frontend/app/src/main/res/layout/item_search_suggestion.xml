<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="18dp"
    card_view:cardElevation="8dp"
    android:foreground="?attr/selectableItemBackground"
    android:clipToPadding="false">

    <!-- Glass-like background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/bg_glass_effect">

        <!-- Poster -->
        <ImageView
            android:id="@+id/suggPoster"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:background="@drawable/poster_rounded_bg"
            android:transitionName="posterTransition" />

        <!-- Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="6dp"
            android:gravity="center_vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/suggTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie Title"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Meta info -->
            <TextView
                android:id="@+id/suggMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search â€¢ 2025"
                android:textColor="#B0B8C9"
                android:textSize="13sp"
                android:layout_marginTop="3dp" />

            <!-- Rating Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <RatingBar
                    android:id="@+id/suggRatingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:progressTint="@color/star_gold"
                    android:scaleX="1"
                    android:scaleY="1" />

                <TextView
                    android:id="@+id/suggRatingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.7"
                    android:textColor="#FFD369"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
