<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111118">

    <!-- Centered Card Container -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp"
        android:background="@drawable/rounded_card_bg"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp">

        <!-- Animated Success Icon -->
        <FrameLayout
            android:id="@+id/animation_area"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp">

            <!-- Success Glowing Circle/Check -->
            <ImageView
                android:id="@+id/success_circle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_success_check_circle"
                android:contentDescription="Success"
                android:alpha="0.9"
                android:elevation="8dp"
                android:layout_gravity="center"/>

            <!-- (Optional) Confetti - requires Lottie; safe to remove if not used -->
            <!--
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/success_confetti"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:lottie_rawRes="@raw/confetti_success"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                android:visibility="visible" />
            -->
        </FrameLayout>

        <!-- Prominent Success Message -->
        <TextView
            android:id="@+id/success_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Successful!"
            android:textColor="#00E6AE"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:alpha="0"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/sub_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Cineverse. Enjoy exclusive movies now."
            android:textColor="#B8EFFF"
            android:textSize="15sp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="10dp"
            android:alpha="0"/>

        <!-- Countdown Text -->
        <TextView
            android:id="@+id/countdownText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redirecting in 3..."
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="18dp"
            android:alpha="0"/>

        <!-- Go to Login Button -->
        <Button
            android:id="@+id/skipNow"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="GO TO LOGIN"
            android:textAllCaps="true"
            android:textColor="#111118"
            android:background="@drawable/rounded_white_button"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:elevation="3dp"
            android:layout_marginTop="0dp"
            android:alpha="0"
            android:translationY="36dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
